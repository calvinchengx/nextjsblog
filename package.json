{
  "name": "nextjsblog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "start": "serve ..",
    "build": "next build && next export",
    "clean:project": "rimraf node_modules/.cache && rimraf out && rimraf _next",
    "clean:parent": "node tools/clean.js",
    "clean": "npm run clean:parent && npm run clean:project",
    "copy": "cp -rf out/* ../ && mkdir -p ../calvinchengx.github.io && cp -rf ../_next ../calvinchengx.github.io/",
    "deploy": "npm run clean && npm run build && npm run copy",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "autoprefixer": "^9.8.6",
    "gray-matter": "^4.0.2",
    "next": "10.1.3",
    "next-compose-plugins": "^2.2.1",
    "next-offline": "^5.0.3",
    "node-glob": "^1.2.0",
    "postcss-import": "^12.0.1",
    "raw-loader": "^4.0.2",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-markdown": "^4.3.1",
    "tailwindcss": "^1.9.6"
  },
  "devDependencies": {
    "babel-plugin-transform-define": "^2.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "fs-extra": "^9.1.0",
    "jest": "^26.6.3",
    "jest-transform-stub": "^2.0.0",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2"
  }
}
